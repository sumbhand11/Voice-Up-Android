<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint=" Your display name..."
        android:ems="10"
        android:layout_below="@+id/setupImageButton"
        android:layout_marginTop="53dp"
        android:id="@+id/setupUserName" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/setupImageButton"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="104dp"
        android:layout_marginEnd="104dp" />

    <Button
        android:text="Finish Setup (Yes this is the last Button)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setupSubmitBtn"
        android:layout_below="@+id/setupUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
