<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_numberLikes"
            android:gravity="center"
            android:layout_alignLeft="@+id/likeBtn"
            android:layout_alignStart="@+id/likeBtn"
            android:layout_above="@+id/likeBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            app:srcCompat="@drawable/like_grey"
            android:id="@+id/likeBtn"
            android:backgroundTint="@android:color/background_light"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Share It!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_button"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="38dp"
            android:layout_marginEnd="38dp"
            android:layout_above="@+id/post_username"
            android:layout_toLeftOf="@+id/likeBtn"
            android:layout_toStartOf="@+id/likeBtn" />

        <ImageView
            android:layout_width="@dimen/com_facebook_profilepictureview_preset_size_normal"
            android:layout_height="@dimen/com_facebook_profilepictureview_preset_size_normal"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
            android:id="@+id/userImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/post_username"
            android:text="Anonymous"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/userImage"
            android:layout_alignStart="@+id/userImage"
            android:gravity="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
             />


    </RelativeLayout>

</android.support.v7.widget.CardView>